@import "../../tpl/base.wxss";
/* order-list.wxss */
.order-list-box {
  padding-left: 20rpx;
  margin-top: 20rpx;
  background: white;
}

.order-list-header {
  padding: 20rpx;
  padding-left: 0;
  border-bottom: 1rpx solid #D9D9D9; 
}

.order-list-main {
  display: flex;
  align-items: center;
  height: 180rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx solid #D9D9D9;
}

.order-list-main>image {
  width: 150rpx;  
  height: 150rpx; 
  margin-right: 20rpx;
}

.order-status {
  display: flex;
  flex-grow: 1;
  justify-content: flex-end;
  color:#B42F2D;
}

.order-list-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  padding-left: 0;
}

.footer-pay {
  width: 170rpx;
  height: 60rpx;
  border-radius: 4rpx;
  background-color:#B42F2D;
  color: #fff;
  text-align: center;
  line-height: 60rpx; 
}

